@model PackingChange1.Models.V_Tran
<style>
    .thead {
        font-weight: bold;
    }
    .newLine {
        white-space:pre-line;
    }
</style>

<div class="row-fluid">
    <div class="span2 text-right"><strong>Control no. : </strong></div>
    <div class="span4">@Html.DisplayFor(m => m.id)</div>
    <div class="span2 text-right"><strong>Request by : </strong></div>
    <div class="span4">@Html.DisplayFor(m => m.request_by)</div>
</div>
<div class="row-fluid">
    <div class="span2 text-right"><strong>Type of change : </strong></div>
    <div class="span4">@Html.DisplayFor(m => m.chage_type)</div>
    <div class="span2 text-right"><strong>Production type : </strong></div>
    <div class="span4">@Html.DisplayFor(m => m.production_type)</div>
</div>
<div class="row-fluid">
    <div class="span2 text-right"><strong>Change detail : </strong></div>
    <div class="span4 newLine">@Html.DisplayFor(m => m.change_detail)</div>
    <div class="span2 text-right"><strong>Current condition : </strong></div>
    <div class="span4 newLine">@Html.DisplayFor(m => m.condition_current)</div>
</div>
<div class="row-fluid">
    <div class="span2 text-right"><strong>Reason of change : </strong></div>
    <div class="span4 newLine">@Html.DisplayFor(m => m.reason)</div>
    <div class="span2 text-right"><strong>New condition : </strong></div>
    <div class="span4 newLine">@Html.DisplayFor(m => m.condition_new)</div>
</div>
<div class="row-fluid">
    <div class="span2 text-right"><strong>Expected date : </strong></div>
    <div class="span4">@String.Format("{0:dd/MM/yyyy}", Model.expected_dt)</div>
    <div class="span2 text-right"><strong>Impact plant : </strong></div>
    <div class="span4" id="divImpact">@ViewBag.ShowImpactPlant</div>
</div>
<br />
<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Action</th>
            <th>Comment</th>
            <th>Date-Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.IssTran)
        {
        <tr>
            <td>@item.fname</td>
            <td>@item.lname</td>
            <td>@item.action</td>
            <td class="newLine">@item.comment</td>
            <td>@item.act_dt.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>    
        }
    </tbody>
</table>