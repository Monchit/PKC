                        return { results: data };
                    }
                },
                formatResult: function (item) { return item.text; },
                formatSelection: function (item) { return item.text; }
            });

            $('#slSale').select2({
                multiple: true,
                ajax: {
                    url: '@Url.Action("GetSaleList", "Home")',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            searchTerm: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data };
                    }
                },
                formatResult: function (item) { return item.text; },
                formatSelection: function (item) { return item.text; }
            });

            $('#slCS').select2({
                multiple: true,
                ajax: {
                    url: '@Url.Action("GetCSList", "Home")',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            searchTerm: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data };
                    }
                },
                formatResult: function (item) { return item.text; },
                formatSelection: function (item) { return item.text; }
            });

            $('#slLG').select2({
                multiple: true,
                ajax: {
                    url: '@Url.Action("GetLGList", "Home")',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            searchTerm: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data };
                    }
                },
                formatResult: function (item) { return item.text; },
                formatSelection: function (item) { return item.text; }
            });

            $('#slPLN').select2({
                multiple: true,
                ajax: {
                    url: '@Url.Action("GetPLNList", "Home")',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
